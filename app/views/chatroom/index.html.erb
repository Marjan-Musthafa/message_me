<h4 class="ui center aligned icon header">
  <i class="circular violet cubes icon"></i>
  Chatroom
</h4>


<div class="ui grid">
    
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
                <div class="ui small feed" id="message_broadcast">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_with(url: message_path, method: :post, html: {class: "ui reply form"}, remote: true) do | f |%>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body %>
                            <%= f.button '<i class="icon paper plane green button"></i>'.html_safe, id: "msg_submit"  %>
                            <%# <button class="ui green button"><i class="icon paper plane"></i></button> %>
                        </div> 
                    </div>
                <%end %>
            </div>
        </div>
    </div>


    
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">    
                <div class="ui inverted vertical menu fluid">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>